<!DOCTYPE html>
<html>
<head>
    <title>Welcome to Faux Course Portal!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../static/css/styles.css"/>

</head>
<header>
    <nav class="navbar fixed-top navbar-expand-md bg-body-tertiary bg-border-bottom bg-border-body bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navigation</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="container-fluid">
                    <div class="navbar-nav">
                        <a class="nav-link" href="/">Home</a>
                        <a class="nav-link" href="/courses">View All Courses</a>
                        <a class="nav-link" href="/courses/search">Search Courses</a>
                        <a class="nav-link" href="/login">Login</a>
                        {% if is_admin %}
                        <a class="nav-link active" aria-current="page" href="/create-account/restricted">Create Account</a>
                        {% else %}
                        <a class="nav-link active" aria-current="page" href="/create-account/public">Create Account</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>
<body>
    <h1>Welcome to DeFaux Course Portal!</h1>
    <div class="notifications">
        {% for category, message in get_flashed_messages(with_categories=true) %}
            <div id="flash-course-message" class="flash {{category}}">{{message}}</div>
        {% endfor %}
    </div>
    <p>Please fill out and submit the form information below to create your new account</p>
    <div id="user-login-form">
        <div class="container-fluid"></div>
        <form id="create-account-form" method="post" action="/create-account/{{form_type}}/submit">
            <fieldset class="form-group-border p-3">
                <legend class="float-none w-auto">Create Account</legend>
                
                <div class="row g-2 align-items-center">
                    <div class="col-auto">
                      <label for="email-input" class="col-form-label">Email</label>
                    </div>
                    <div class="col-auto">
                      <input type="email" id="email-input" name="email-input" class="form-control" required />
                    </div>
                </div>

                <div class="row g-2 align-items-center">
                    <div class="col-auto">
                      <label for="password-input" class="col-form-label">Password</label>
                    </div>
                    <div class="col-auto">
                      <input type="password" id="password-input" name="password-input" pattern="(?=.*[A-Z])(?=.*[a-z])(?=.*\d)(?=.*[^A-Za-z0-9]).{8,}"
                       class="form-control" onchange="checkPasswordMatch()"
                       title="Password must be at least 8 characters, including at least one uppercase and lowercase letter, one digit, and one special character" required />
                        <input type="checkbox" id="password-vis-toggle" name="password-vis-toggle" onclick="togglePasswordVisibility()" />
                      <label for="password-vis-toggle">Show Password</label>
                    </div>
                </div>

                <div class="row g-2 align-items-center">
                    <div class="col-auto">
                      <label for="confirm-password" class="col-form-label">Confirm Password</label>
                    </div>
                    <div class="col-auto">
                      <input type="password" id="confirm-password" name="confirm-password" pattern="(?=.*[A-Z])(?=.*[a-z])(?=.*\d)(?=.*[^A-Za-z0-9]).{8,}"
                       class="form-control" onchange="checkPasswordMatch()"
                       title="Password must be at least 8 characters, including at least one uppercase and lowercase letter, one digit, and one special character" required />
                    </div>
                </div>
                <br>
                <div id="password-match-msg" name="password-match-msg" class="col-auto">
                    <h5><strong>Passwords Do Not Match!</strong></h5>
                </div>
                <br>

                {% if is_admin %}
                <select class="form-select" id="role-input" name="role-input" required>
                    <option value="student" selected>Student</option>
                    <option value="instructor">Instructor</option>
                    <option value="admin">Admin</option>
                </select>
                {% else %}
                <input type="hidden" id="role-input" name="role-input" value="student" required>
                {% endif %}

                <div class="row g-3 align-items-right">
                    <div class="d-grid d-md-block">
                        <div class="col">
                            <label for="Create Account"></label>
                        </div>
                        <button class="btn btn-outline-dark" type="submit" id="create-account" name="create-account" value="create-account">Create Account</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>    
    <script>

        window.addEventListener('load', () => {
            const flaskMessage = document.querySelector("#flash-course-message");
            if (flaskMessage) {
                setTimeout(() => {document.querySelector("#flash-course-message").remove();}, 6000)
            }
        });

        function togglePasswordVisibility() {
            const passwordInput = document.querySelector("#password-input");
            const passwordConfirm = document.querySelector("#confirm-password");
            if (passwordInput) {
                if (passwordInput.type === "password") {
                    passwordInput.type = "text";
                } else {
                    passwordInput.type = "password";
                }
            }

            if (passwordConfirm) {
                if (passwordConfirm.type === "password") {
                    passwordConfirm.type = "text";
                } else {
                    passwordConfirm.type = "password";
                }
            }
        }

        function checkPasswordMatch() {
            if (document.querySelector("#password-input").value !== document.querySelector("#confirm-password").value) {
                document.querySelector("#password-match-msg").style.display = "block";
            } else {
                document.querySelector("#password-match-msg").style.display = "none";
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>