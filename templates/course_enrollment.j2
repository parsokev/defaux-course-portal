<!DOCTYPE html>
<html>
<head>
    <title>{{data['course']['title']}} Enrollment Information</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../../static/css/styles.css"/>
</head>
<header>
    <nav class="navbar fixed-top navbar-expand-md bg-body-tertiary bg-border-bottom bg-border-body bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navigation</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="container-fluid">
                    <div class="navbar-nav">
                        <a class="nav-link" href="/">Home</a>
                        <a class="nav-link" href="/courses">View All Courses</a>
                        <a class="nav-link" href="/courses/search">Search Courses</a>
                        {% if logged_in %}
                        <a class="nav-link" href="{{url_for('get_matching_user', user_id=user_id)}}">Profile</a>
                        <a class="nav-link" href="/logout">Logout</a>
                        {% else %}
                        <a class="nav-link" href="/login">Login</a>
                        {% endif %}

                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>
<body>
    <div class="notifications">
        {% for category, message in get_flashed_messages(with_categories=true) %}
            <div id="flash-course-message" class="flash {{category}}">{{message}}</div>
        {% endfor %}
    </div>
    <h1>Enrollment for {{data['course']['title']}}</h1>
    {% if data['enrolled_students']|length > 0 %}
    <div id="display-enrolled-students-table">
        <h3>Enrolled Students</h3>
        <table id="all-enrolled-students-table">
            <thead>
                <tr>
                {% for key in data['enrolled_students'][0].keys() %}
                    {% if key == 'email' or key == 'name' %}
                    <th>{{key}}</th>
                    {% endif %}
                {% endfor %}
                {% if is_admin %}
                <th>Link</th>
                {% endif %}
                <th>Action</th>
                <tr>
            </thead>
            <tbody>
                {% for student in data['enrolled_students'] %}
                <tr>
                    {% for key in student.keys() %}
                        {% if key == 'email' or key == 'name' %}
                        <td>{{student[key]}}</td>
                        {% endif %}
                    {% endfor %}
                    {% if is_admin %}
                    <td><a href="{{url_for('get_matching_user', user_id=student['id'])}}">View Student</a></td>
                    {% endif %}
                    <td>
                        <a href="{{url_for('unenroll_student', course_id=data['course']['id'], student_id=student['id'])}}">
                        Unenroll
                        <img src="/static/img/unenroll-user.svg" width="39" height="30">
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <h2>There are currently no students enrolled in this course!</h2>
    {% endif %}
    <!-- <div>
        <div class="row g-3 align-items-right">
            <div class="d-grid d-md-block">
                <div class="col">
                    <label for="display-enrolled-students-table"></label>
                </div>
                <button class="btn btn-outline-info" type="button">Add Students</button>
            </div>
        </div>
    </div> -->

    <div class="row" id="add-student-table">
        <div class="container">
            <form id="add-student-form" action="/courses/{{data['course']['id']}}/students" method="post">
                <fieldset class="form-group-border p-3">
                    <legend class="float-none w-auto">Enroll Student to Course</legend>
                    <div class="row g-2 align-items-center">
                        <div class="col-auto">
                        <label for="course-subject-instructor" class="col-form-label">Course Instructor</label>
                        </div>
                        <select class="form-select" name="selected-student" id="selected-student" placeholder="Select Student to Enroll" required>
                            <!-- <option selected>Select Student to Enroll</option> -->
                            {% for student in data['students'] %}
                            <option value="{{student['id']}}">{{student['name']}}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="row g-3 align-items-right">
                        <div class="d-grid d-md-block">
                            <div class="col">
                                <label for="add-course"></label>
                            </div>
                            <button class="btn btn-outline-dark" type="submit" id="enroll-student" name="enroll-student" value="enroll-student">Enroll Student</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

    <script>
        window.addEventListener('load', () => {
            document.querySelector('#display-enrolled-students-table').style.display = "block";
            const flaskMessage = document.querySelector("#flash-course-message");
            if (flaskMessage) {
                setTimeout(() => {document.querySelector("#flash-course-message").remove();}, 6000)
            }
            // document.querySelector('#update-enrolled-student-table').display.style = "none";
        })
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>