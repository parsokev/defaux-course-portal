<!DOCTYPE html>
<html>
<head>
    <title>{{data['title']}} Information</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../static/css/styles.css"/>
</head>
<header>
    <nav class="navbar fixed-top navbar-expand-md bg-body-tertiary bg-border-bottom bg-border-body bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navigation</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="container-fluid">
                    <div class="navbar-nav">
                        <a class="nav-link" href="/">Home</a>
                        <a class="nav-link" href="/courses">View All Courses</a>
                        <a class="nav-link" href="/courses/search">Search Courses</a>
                        {% if logged_in %}
                        <a class="nav-link" href="{{url_for('get_matching_user', user_id=user['id'])}}">Profile</a>
                        <a class="nav-link" href="/logout">Logout</a>
                        {% else %}
                        <a class="nav-link" href="/login">Login</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>
<body>    
    <div class="notifications">
        {% for category, message in get_flashed_messages(with_categories=true) %}
            <div id="flash-course-message" class="flash {{category}}">{{message}}</div>
        {% endfor %}
    </div>
    <div id="display-course-info-table">
        <div class="row">
            <h3>{{data['title']}}</h3>
            <div class="col">
                <ul class=" list-group">
                    {% for key in data.keys() %}
                    {% if key == 'id' or key == 'self' %}
                    {% elif key == 'instructor_id' %}
                    <li id="course-info-item" class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="d-flex w-40 justify-content-between">
                            <h5 class="mb-1">Instructor</h5>
                            <p class="mb-1">{{instructor['name']}}</p>
                        </div>
                    </li>
                    {% else %}
                    <li id="course-info-item" class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="d-flex w-40 justify-content-between">
                            <h5 class="mb-1">{{key}}</h5>
                            <p class="mb-1">{{data[key]}}</p>
                        </div>
                    </li>
                    {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>
        <p></p>
        <div class="row">
            <div class="d-grid gap-2 d-md-block">
                {% if 'role' in user and user['role'] == 'admin' %}
                <button class="btn btn-outline-primary" onclick="editCourse()" type="button">Edit Course</button>
                {% endif %}
                {% if is_instructor or ('role' in user and user['role'] == 'admin') %}
                <!-- <a type="button" class="btn btn-outline-info" href="/courses/{{data['id']}}/students">View Enrollment</a> -->
                <a type="button" class="btn btn-outline-info" href="{{url_for('get_course_enrollment', course_id=data['id'])}}">View Enrollment</a>
                {% endif %}
                {% if 'role' in user and user['role'] == 'admin' %}
                <button class="btn btn-outline-danger" id="delete-course-button" type="button">Delete Course</button>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="row" id="edit-course-table">
        <div class="container">
            <form id="edit-course-form" action="/courses/{{data['id']}}" method="post">
                <fieldset class="form-group-border p-3">
                    <legend class="float-none w-auto">Edit Course</legend>
                    <div class="row g-2 align-items-center">
                        <div class="col-auto">
                        <label for="course-title-input" class="col-form-label">Course Title</label>
                        </div>
                        <div class="col-auto">
                        <input type="text" id="course-title-input" name="course-title-input" class="form-control" placeholder="{{data['title']}}" required>
                        </div>
                    </div>
                    <div class="row g-2 align-items-center">
                        <div class="col-auto">
                        <label for="course-subject-input" class="col-form-label">Course Subject</label>
                        </div>
                        <div class="col-auto">
                        <input type="text" id="course-subject-input" name="course-subject-input" class="form-control" placeholder="{{data['subject']}}" required>
                        </div>
                    </div>
                    <div class="row g-2 align-items-center">
                        <div class="col-auto">
                        <label for="course-number-input" class="col-form-label">Course Number</label>
                        </div>
                        <div class="col-auto">
                        <input type="number" id="course-number-input" name="course-number-input" class="form-control" placeholder="{{data['number']}}" required>
                        </div>
                    </div>
                    <div class="row g-2 align-items-center">
                        <div class="col-auto">
                        <label for="course-subject-input" class="col-form-label">Course Term</label>
                        </div>
                        <div class="col-auto">
                        <input type="text" id="course-subject-input" name="course-term-input" class="form-control" placeholder="{{data['term']}}" required>
                        </div>
                    </div>
                    <div class="row g-2 align-items-center">
                        <div class="col-auto">
                        <label for="course-subject-instructor" class="col-form-label">Course Instructor</label>
                        </div>
                        <select class="form-select" name="selected-course-instructor" id="selected-course-instructor" required>
                            <option selected>Select Course Instructor</option>
                            {% for instructor in instructors %}
                            <option value="{{instructor['id']}}">{{instructor['name']}}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="row g-3 align-items-right">
                        <div class="d-grid d-md-block">
                            <div class="col">
                                <label for="edit-course"></label>
                            </div>
                            <button class="btn btn-outline-dark" type="submit" id="edit-course" name="edit-course" value="edit-course">Edit Course</button>
                            <button class="btn btn-outline-info" onclick="showCourseInfo()" type="button" id="cancel-button" name="cancel-button" value="cancel-button">Cancel</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

    <dialog id="deleteDialog">
        <form action="/courses/{{data['id']}}/delete" method="post">
          <p>
            <label>
            <strong>
              Are You Sure You Want to Delete {{data['title']}}?
            </strong>
            </label>
          </p>
          <div>
            <button class="btn btn-outline-danger" id="confirmBtn" value="confirm">Confirm</button>
            <button class="btn btn-outline-info" id="cancelBtn" value="cancel" formmethod="dialog">Cancel</button>
          </div>
        </form>
      </dialog>
    

    
    <script>
        window.addEventListener('load', () => {
            document.querySelector("#display-course-info-table").style.display = "block";
            document.querySelector("#edit-course-table").style.display = "none";
            const showDialogBtn = document.getElementById("delete-course-button");
            if (showDialogBtn) {
                showDialogBtn.addEventListener("click", () => {
                    deleteDialog.showModal();
                });
            }

            const deleteDialog = document.getElementById("deleteDialog");
            const cancelBtn = deleteDialog.querySelector("#cancelBtn");
            const confirmBtn = deleteDialog.querySelector("#confirmBtn");
            const flaskMessage = document.querySelector("#flash-course-message");
            if (flaskMessage) {
                setTimeout(() => {document.querySelector("#flash-course-message").remove();}, 6000)
            }
            
            // "Show the dialog" button opens the <dialog> modally



            // "Cancel" button closes the dialog without submitting because of [formmethod="dialog"], triggering a close event.
            // deleteDialog.addEventListener("close", (e) => {
            //     confirmDelete(deleteDialog.returnValue);
            // });
            cancelBtn.addEventListener("click", (event) => {
                event.preventDefault(); // We don't want to submit this fake form
                deleteDialog.close(event.target.value); // Have to send the select box value here.
            });
            // Prevent the "confirm" button from the default behavior of submitting the form, and close the dialog with the `close()` method, which triggers the "close" event.
            confirmBtn.addEventListener("click", (event) => {
                deleteDialog.close(event.target.value); // Have to send the select box value here.
            });
        })

        function editCourse() {
            document.querySelector("#display-course-info-table").style.display = "none";
            document.querySelector("#edit-course-table").style.display = "block";
        }

        function showCourseInfo() {
            document.querySelector("#display-course-info-table").style.display = "block";
            document.querySelector("#edit-course-table").style.display = "none";
        }

        function confirmDelete(clickedVal) {
            if (clickedVal == "cancel") {
                showCourseInfo();
            } else {
                deleteCourse();
                
            }
        }

    
