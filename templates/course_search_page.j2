<body>
    <h1>Search for a Course</h1>
    <p>Please select category for course search</p>
    <div id="display-category-form" class="container-fluid">
        <form id="search-select-form">
            <fieldset class="form-group border p-3">
                <legend class="float-none w-auto">Select Search Category</legend>
                <div class="input-group mb-3">
                    <select class="form-select" name="selected-search-category" id="selected-search-category" required>
                        <option selected>Select Category</option>
                        <option value="Term">Course Term</option>
                        <option value="Subject">Subject</option>
                        <option value="Instructor">Instructor</option>
                    </select>
                    <button class="btn btn-outline-dark" type="button" onclick="showSearchTable()" name="Confirm Category" value="Confirm Category" id="Confirm Category">Confirm Category</button>
                </div>                
            </fieldset>          
        </form>
    </div>

    <div id="display-term-search">
          <form id="term-select-form" method="post" action="/courses/search">
            <fieldset class="form-group border p-3">
                <legend class="float-none w-auto">Select Term for Course Search</legend>
                <div class="input-group mb-3">
                    <select class="form-select" name="selected-search-term" id="selected-search-term" required>
                        <option value="">Select Course Term</option>
                        {% for term in data['terms'] %}
                        <option value="{{term}}">{{term}}</option>
                        {% endfor %}
                    </select>
                    <button class="btn btn-outline-dark" type="submit" name="Search By Term" value="Search By Term" id="Search By Term">Search By Term</button>
                </div>                
            </fieldset>          
        </form>
    </div>

    <div id="display-subject-search">
        <form id="subject-select-form" method="post" action="/courses/search">
            <fieldset class="form-group border p-3">
                <legend class="float-none w-auto">Select Subject for Course Search</legend>
                <div class="input-group mb-3">
                    <select class="form-select" name="selected-search-subject" id="selected-search-subject" required>
                        <option value="">Select Course Subject</option>
                        {% for subject in data['subjects'] %}
                        <option value="{{subject}}">{{subject}}</option>
                        {% endfor %}
                    </select>
                    <button class="btn btn-outline-dark" type="submit" name="Search By Subject" value="Search By Subject" id="Search By Subject">Search By Subject</button>
                </div>                
            </fieldset>          
      </form>
  </div>

    <div id="display-instructor-search">
        <form id="instructor-select-form" method="post" action="/courses/search">
        <fieldset class="form-group border p-3">
            <legend class="float-none w-auto">Select Instructor for Course Search</legend>
            <div class="input-group mb-3">
                <select class="form-select" name="selected-search-instructor" id="selected-search-instructor" required>

                    <option value="">Select Course Instructor</option>
                    {% for instructor in data['instructors'] %}
                    <option value="{{instructor['id']}}">{{instructor['name']}}</option>
                    {% endfor %}
                </select>
                <button class="btn btn-outline-dark" type="submit" name="Search By Instructor" value="Search By Instructor" id="Search By Instructor">Search By Instructor</button>
            </div>                
        </fieldset>          
    </form>
    </div>
    <script>

    window.addEventListener('load', () => {
        document.querySelector("#display-category-form").style.display = "block";
        document.querySelector("#display-term-search").style.display = "none";
        document.querySelector("#display-subject-search").style.display = "none";
        document.querySelector("#display-instructor-search").style.display = "none";
    });

    function displayController(category){
        if(category == "Term"){
            document.querySelector("#display-category-form").style.display = "none";
            document.querySelector("#display-term-search").style.display = "block";
            document.querySelector("#display-subject-search").style.display = "none";
            document.querySelector("#display-instructor-search").style.display = "none";        
        }

        else if(category == "Subject"){
            document.querySelector("#display-category-form").style.display = "none";
            document.querySelector("#display-term-search").style.display = "none";
            document.querySelector("#display-subject-search").style.display = "block";
            document.querySelector("#display-instructor-search").style.display = "none";          
        }

        else if (category == "Instructor"){
            document.querySelector("#display-category-form").style.display = "none";
            document.querySelector("#display-term-search").style.display = "none";
            document.querySelector("#display-subject-search").style.display = "none";
            document.querySelector("#display-instructor-search").style.display = "block";  
        } 

