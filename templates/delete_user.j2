<!DOCTYPE html>
<html>
<head>
    <title>User Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../../static/css/styles.css"/>
</head>
<header>
    <nav class="navbar fixed-top navbar-expand-md bg-body-tertiary bg-border-bottom bg-border-body bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navigation</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="container-fluid">
                    <div class="navbar-nav">
                        <a class="nav-link" href="/">Home</a>
                        <a class="nav-link" href="/courses">View All Courses</a>
                        <a class="nav-link" href="/courses/search">Search Courses</a>
                        {% if logged_in %}
                        <a class="nav-link" href="/logout">Logout</a>
                        {% else %}
                        <a class="nav-link" href="/login">Login</a>
                        {% endif %}

                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>
<body>
    <div class="notifications">
        {% for category, message in get_flashed_messages(with_categories=true) %}
            <div id="flash-course-message" class="flash {{category}}">{{message}}</div>
        {% endfor %}
    </div>
    <h1>Delete Account for User {{delete_user.name}}</h1>

    <div class="row" id="delete-user-table">
        <div class="container">
            <form id="delete-user-form" method="post" action="{{url_for('delete_user_account', user_id=delete_user.id)}}">
                <fieldset class="form-group-border p-3">
                    <legend class="float-none w-auto">Confirm Account Deletion</legend>
                    <h2>Are You Sure you wish to delete {{delete_user.name}}?</h2>
                    <h3>Clicking 'Delete User' will <strong>permanently</strong> delete this user!</h3>
                    <div class="row g-3 align-items-right">
                        <div class="d-grid d-md-block">
                            <button 
                                class="btn btn-outline-danger" 
                                type="submit" 
                                name="delete-user" 
                                value="delete-user" 
                                formmethod="post" 
                                formaction="{{url_for('delete_user_account', user_id=delete_user.id)}}"
                            >Delete User</button>
                            <button 
                                class="btn btn-outline-info" 
                                type="submit"
                                formnovalidate="true"
                                formmethod="get" 
                                formaction="{{url_for('get_users')}}" 
                                type="button" 
                                id="cancel-button" 
                                name="cancel-button"
                                value="cancel-button"
                            >Cancel</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

    <script>
        window.addEventListener('load', () => {
            const flaskMessage = document.querySelector("#flash-course-message");
            if (flaskMessage) {
                setTimeout(() => {document.querySelector("#flash-course-message").remove();}, 6000)
            }
        })
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>