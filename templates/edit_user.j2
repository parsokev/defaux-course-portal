<!DOCTYPE html>
<html>
<head>
    <title>User Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../../static/css/styles.css"/>
</head>
<header>
    <nav class="navbar fixed-top navbar-expand-md bg-body-tertiary bg-border-bottom bg-border-body bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navigation</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="container-fluid">
                    <div class="navbar-nav">
                        <a class="nav-link" href="/">Home</a>
                        <a class="nav-link" href="/courses">View All Courses</a>
                        <a class="nav-link" href="/courses/search">Search Courses</a>
                        {% if logged_in %}
                        <a class="nav-link" href="/logout">Logout</a>
                        {% else %}
                        <a class="nav-link" href="/login">Login</a>
                        {% endif %}

                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>
<body>
    <div class="notifications">
        {% for category, message in get_flashed_messages(with_categories=true) %}
            <div id="flash-course-message" class="flash {{category}}">{{message}}</div>
        {% endfor %}
    </div>
    <h1>Edit Account for User {{edit_user.name}}</h1>

    <div class="row" id="edit-user-table">
        <div class="container">
            <form id="edit-user-form" method="post" action="{{url_for('update_user_account', user_id=edit_user.id)}}">
                <fieldset class="form-group-border p-3">
                    <legend class="float-none w-auto">Select User Property to Update</legend>
                    <div id="update-user-radio">
                        <p>
                            <label for="update-user-email-radio">Change Email</label>
                            <input type="radio" id="update-user-email-radio" name="update-user-email-radio" onchange="getSelectedType('email')" value="email" checked>
                        </p>
                        <p>
                            <label for="update-user-password-radio">Change Password</label>
                            <input type="radio" id="update-user-password-radio" name="update-user-password-radio" onchange="getSelectedType('password')" value="password">
                        </p>
                    </div>
                        
                        

                    <div id="email-change-section">
                        <div class="row g-2 align-items-center">
                            <div class="col-auto">
                                <label for="user-email-input" class="col-form-label">Email</label>
                            </div>
                            <div class="col-auto">
                                <input type="email" id="user-email-input" name="user-email-input" value="{{edit_user.email}}"
                                class="form-control" required>
                            </div>
                        </div>
                    </div>

                    <div type="hidden" id="password-change-section">
                        <div class="row g-2 align-items-center">
                            <div class="col-auto">
                            <label for="user-password-input" class="col-form-label">Password</label>
                            </div>
                            <div class="col-auto">
                            <input type="password" id="user-password-input" name="user-password-input" pattern="(?=.*[A-Z])(?=.*[a-z])(?=.*\d)(?=.*[^A-Za-z0-9]).{8,}"
                            class="form-control" onchange="checkPasswordMatch()"
                            title="Password must be at least 8 characters, including at least one uppercase and lowercase letter, one digit, and one special character" required />
                                <input type="checkbox" id="password-vis-toggle" name="password-vis-toggle" onclick="togglePasswordVisibility()" />
                            <label for="password-vis-toggle">Show Password</label>
                            </div>
                        </div>



                        <div class="row g-2 align-items-center">
                            <div class="col-auto">
                            <label for="user-confirm-password" class="col-form-label">Confirm Password</label>
                            </div>
                            <div class="col-auto">
                            <input type="password" id="user-confirm-password" name="user-confirm-password" pattern="(?=.*[A-Z])(?=.*[a-z])(?=.*\d)(?=.*[^A-Za-z0-9]).{8,}"
                            class="form-control" onchange="checkPasswordMatch()"
                            title="Password must be at least 8 characters, including at least one uppercase and lowercase letter, one digit, and one special character" required />
                            </div>
                        </div>
                        <br>
                        <div id="password-match-msg" name="password-match-msg" class="col-auto">
                            <h5><strong>Passwords Do Not Match!</strong></h5>
                        </div>
                        <br>
                    </div>

                    <div class="row g-3 align-items-right">
                        <div class="d-grid d-md-block">
                            <button 
                                class="btn btn-outline-dark" 
                                type="submit" 
                                name="edit-user" 
                                value="edit-user" 
                                formmethod="post" 
                                formaction="{{url_for('update_user_account', user_id=edit_user.id)}}"
                            >Edit User</button>
                            <button 
                                class="btn btn-outline-info" 
                                type="submit"
                                formnovalidate="true"
                                formmethod="get" 
                                formaction="{{url_for('get_users')}}" 
                                type="button" 
                                id="cancel-button" 
                                name="cancel-button"
                                value="cancel-button"
                            >Cancel</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

    <script>
        window.addEventListener('load', () => {
            const flaskMessage = document.querySelector("#flash-course-message");
            document.querySelector('#email-change-section').style.display = "block";
            document.querySelector('#password-change-section').style.display = "none";
            document.querySelector('#user-email-input').required = true;
            document.querySelector("#user-password-input").required = false;
            document.querySelector("#user-confirm-password").required = false;
            if (flaskMessage) {
                setTimeout(() => {document.querySelector("#flash-course-message").remove();}, 6000)
            }
        })

        function togglePasswordVisibility() {
            const passwordInput = document.querySelector("#user-password-input");
            const passwordConfirm = document.querySelector("#user-confirm-password");
            if (passwordInput) {
                if (passwordInput.type === "password") {
                    passwordInput.type = "text";
                } else {
                    passwordInput.type = "password";
                }
            }

            if (passwordConfirm) {
                if (passwordConfirm.type === "password") {
                    passwordConfirm.type = "text";
                } else {
                    passwordConfirm.type = "password";
                }
            }
        }

        function checkPasswordMatch() {
            if (document.querySelector("#user-password-input").value !== document.querySelector("#user-confirm-password").value) {
                document.querySelector("#password-match-msg").style.display = "block";
            } else {
                document.querySelector("#password-match-msg").style.display = "none";
            }
        }

        function getSelectedType(selectedValue) {
            if (selectedValue == 'email') {
                document.querySelector('#update-user-email-radio').checked = true;
                document.querySelector('#update-user-password-radio').checked = false;
                document.querySelector('#email-change-section').style.display = "block";
                document.querySelector('#password-change-section').style.display = "none";
                document.querySelector('#user-email-input').required = true;
                document.querySelector("#user-password-input").required = false;
                document.querySelector("#user-password-input").value = '';
                document.querySelector("#user-confirm-password").value = '';
                document.querySelector("#user-confirm-password").required = false;
            }
            if (selectedValue == 'password') {
                document.querySelector('#update-user-email-radio').checked = false;
                document.querySelector('#update-user-password-radio').checked = true;
                document.querySelector('#email-change-section').style.display = "none";
                document.querySelector('#password-change-section').style.display = "block";
                document.querySelector('#user-email-input').required = false;
                document.querySelector('#user-email-input').value = '';
                document.querySelector("#user-password-input").required = true;
                document.querySelector("#user-confirm-password").required = true;
            }
        }

        // function clearRequired() {
        //     document.querySelector('#user-email-input').required = false;
        //     document.querySelector("#user-password-input").required = false;
        //     document.querySelector("#user-confirm-password").required = false;
        // }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>