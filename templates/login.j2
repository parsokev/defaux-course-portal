<!DOCTYPE html>
<html>
<head>
    <title>Welcome to Faux Course Portal!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../static/css/styles.css"/>

</head>
<header>
    <nav class="navbar fixed-top navbar-expand-md bg-body-tertiary bg-border-bottom bg-border-body bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navigation</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="container-fluid">
                    <div class="navbar-nav">
                        <a class="nav-link" href="/">Home</a>
                        <a class="nav-link" href="/courses">View All Courses</a>
                        <a class="nav-link" href="/courses/search">Search Courses</a>
                        <a class="nav-link active" aria-current="page" href="/login">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>
<body>
    <h1>Welcome to DeFaux Course Portal!</h1>
    <div class="notifications">
        {% for category, message in get_flashed_messages(with_categories=true) %}
            <div id="flash-course-message" class="flash {{category}}">{{message}}</div>
        {% endfor %}
    </div>
    <p>Please enter your login information to access your courses.</p>
    <div id="user-login-form">
        <div class="container-fluid"></div>
        <form id="login-form" method="post" action="/users/login">
            <fieldset class="form-group-border p-3">
                <legend class="float-none w-auto">User Login</legend>
                <div class="row g-2 align-items-center">
                    <div class="col-auto">
                      <label for="username" class="col-form-label">Username</label>
                    </div>
                    <div class="col-auto">
                      <input type="text" id="username-input" name="username-input" class="form-control" required>
                    </div>
                </div>
                <div class="row g-2 align-items-center">
                    <div class="col-auto">
                      <label for="password-input" class="col-form-label">Password</label>
                    </div>
                    <div class="col-auto">
                      <input type="password" id="password-input" name="password-input" class="form-control" required>
                    </div>
                </div>
                <div class="row g-3 align-items-right">
                    <div class="d-grid d-md-block">
                        <div class="col">
                            <label for="Login"></label>
                        </div>
                        <button class="btn btn-outline-dark" type="submit" id="Login" name="Login" value="Login">Sign In</button>
                    </div>
                </div>
                <div class="row g-3 align-items-right">
                    <div class="col">
                        <label for="create-account-btn">Don't Have An Account?</label>
                    </div>
                    <a class="btn btn-outline-dark" type="button" href="/create-account/public" id="create-account-btn" name="create-account-btn" value="Create Account">Create Account</a>
                </div>
            </fieldset>
        </form>
        
    </div>    
    <script>
        window.addEventListener('load', () => {
            const flaskMessage = document.querySelector("#flash-course-message");
            if (flaskMessage) {
                setTimeout(() => {document.querySelector("#flash-course-message").remove();}, 6000)
            }
        })
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>