<!DOCTYPE html>
<html>
<head>
    <title>User Profile Information</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../static/css/styles.css"/>
</head>
<header>
    <nav class="navbar fixed-top navbar-expand-md bg-body-tertiary bg-border-bottom bg-border-body bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navigation</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="container-fluid">
                    <div class="navbar-nav">
                        <a class="nav-link" href="/">Home</a>
                        <a class="nav-link" href="/courses">View All Courses</a>
                        <a class="nav-link" href="/courses/search">Search Courses</a>
                        {% if logged_in %}
                        <a class="nav-link active" aria-current="page" href="{{url_for('get_matching_user', user_id=data['id'])}}">Profile</a>
                        <a class="nav-link" href="/logout">Logout</a>
                        {% else %}
                        <a class="nav-link" href="/login">Login</a>
                        {% endif %}
                        {% if data['role'] == 'admin' %}
                        <a class="nav-link" href="/courses/prepopulate">Add Course Presets</a>
                        <a class="nav-link" href="/users">View Users</a>
                        {% else %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>

<body>
    {% if data['role'] == 'admin' %}
    <h3>Admin Actions</h3>
    <div class="row">
        <div class="button-group">
            <button class="btn btn-outline-dark" type="button" onclick="addCourse()" name="add-new-course" value="add-new-course" id="add-new-course">Add New Course</button>
            <a class="btn btn-outline-info" type="button" href="/create-account/restricted" name="add-new-user" value="add-new-user" id="add-new-user">Add New User</a>
        </div>
    </div>
    <p></p>
    {% else %}
    {% endif %}
    <div id="display-user-info-table">
        <div class="row">
            <div class="col">
                <ul class=" list-group">
                    <h4>Profile Information</h4>
                    {% for key in data.keys() %}
                        {% if key == 'courses' or key == 'sub' or key == 'id' or key == 'avatar_url' %}
                        {% else %}
                        <li id="user-info-item" class="list-group-item d-flex justify-content-between align-items-center">
                            <div class="d-flex w-40 justify-content-between">
                                <h5 class="mb-1">{{key}}</h5>
                                <p class="mb-1">{{data[key]}}</p>
                            </div>
                        </li>
                        {% endif %}
                    {% endfor %}
                    {% if 'courses' in data %}
                    <p></p>
                    <h4>Courses</h4>
                    {% for course in data['courses'] %}
                    <li id="course-link-item" class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="{{url_for('get_matching_course', course_id=course['id'])}}" class="list-group-item list-group-item-action">
                            <div class="d-flex w-40 justify-content-between">
                                <h5 class="mb-1">{{course['title']}}</h5>
                                <p class="mb-1">Course ID: {{course['id']}}</p>
                            </div>
                        </a>
                    </li>
                    {% endfor %}
                    {% endif %}
                </ul>
            </div>

            <div class="col" id="avatar-file-table">
                <div class="notifications">
                    {% for category, message in get_flashed_messages(with_categories=true) %}
                        <div id="flash-course-message" class="flash {{category}}">{{message}}</div>
                    {% endfor %}
                </div>
                <h4>Profile Avatar</h4>
                <form method="post" enctype="multipart/form-data" action="/users/{{data['id']}}/avatar">
                    <fieldset id="avatar-block" class="form-group-border p-3">
                        <p></p>
                    <legend class="float-none w-auto">Your Avatar Image</legend>
                        <div class="row g-3 align-items-center">
                            <div class="d-grid d-lg-block">
                                {% if 'avatar_url' in data %}
                                <div class="col-auto">
                                    <img src="{{data['avatar_url']}}" class="img-fluid" alt="{{data['name']}}'s Avatar">
                                </div>
                                {% endif %}
                                <p></p>
                                <div class="col-auto">
                                    <label for="avatar-file" class="form-label">Select an Avatar Image</label>
                                </div>
                                <div class="col-auto mb-3">
                                    <input class="form-control" type="file" id="avatar-file" accept="image/x-png" name="file"/>
                                </div>
                                <button class="btn btn-outline-dark" type="submit">Submit Avatar</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>

    <div class="row" id="add-course-table">
        <div class="container">
            <form id="add-course-form" action="/courses" method="post">
                <fieldset class="form-group-border p-3">
                    <legend class="float-none w-auto">Add Course</legend>
                    <div class="row g-2 align-items-center">
                        <div class="col-auto">
                        <label for="course-title-input" class="col-form-label">Course Title</label>
                        </div>
                        <div class="col-auto">
                        <input type="text" id="course-title-input" name="course-title-input" class="form-control" required>
                        </div>
                    </div>
                    <div class="row g-2 align-items-center">
                        <div class="col-auto">
                        <label for="course-subject-input" class="col-form-label">Course Subject</label>
                        </div>
                        <div class="col-auto">
                        <input type="text" id="course-subject-input" name="course-subject-input" class="form-control" required>
                        </div>
                    </div>
                    <div class="row g-2 align-items-center">
                        <div class="col-auto">
                        <label for="course-number-input" class="col-form-label">Course Number</label>
                        </div>
                        <div class="col-auto">
                        <input type="number" id="course-number-input" name="course-number-input" class="form-control" required>
                        </div>
                    </div>
                    <div class="row g-2 align-items-center">
                        <div class="col-auto">
                        <label for="course-subject-input" class="col-form-label">Course Term</label>
                        </div>
                        <div class="col-auto">
                        <input type="text" id="course-subject-input" name="course-term-input" class="form-control" required>
                        </div>
                    </div>
                    <div class="row g-2 align-items-center">
                        <div class="col-auto">
                        <label for="course-subject-instructor" class="col-form-label">Course Instructor</label>
                        </div>
                        <select class="form-select" name="selected-course-instructor" id="selected-course-instructor" required>
                            <option selected>Select Course Instructor</option>
                            {% for instructor in instructors %}
                            <option value="{{instructor['id']}}">{{instructor['name']}}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="row g-3 align-items-right">
                        <div class="d-grid d-md-block">
                            <div class="col">
                                <label for="add-course"></label>
                            </div>
                            <button class="btn btn-outline-dark" type="submit" id="add-course" name="add-course" value="add-course">Add Course</button>
                            <button class="btn btn-outline-info" onclick="showUserInfo()" type="button" id="cancel-button" name="cancel-button" value="cancel-button">Cancel</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>



    <script>
        window.addEventListener('load', () => {
            document.querySelector("#add-course-table").style.display = "none";
            document.querySelector("#display-user-info-table").style.display = "block";
            const addCourseBtn = document.querySelector("#add-new-course");
            if (addCourseBtn) {
                addCourseBtn.style.display = "block"
            }
            
            const flaskMessage = document.querySelector("#flash-course-message");
            if (flaskMessage) {
                setTimeout(() => {document.querySelector("#flash-course-message").remove();}, 6000)
            }
        });

        function addCourse() {
            document.querySelector("#add-course-table").style.display = "block";
            document.querySelector("#display-user-info-table").style.display = "none";
            document.querySelector("#add-new-course").style.display = "none";
        }

        function showUserInfo() {
            document.querySelector("#add-course-table").style.display = "none";
            document.querySelector("#display-user-info-table").style.display = "block";
            document.querySelector("#add-new-course").style.display = "block";
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>