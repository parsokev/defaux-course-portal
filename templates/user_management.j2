<!DOCTYPE html>
<html>
<head>
    <title>User Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../../static/css/styles.css"/>
</head>
<header>
    <nav class="navbar fixed-top navbar-expand-md bg-body-tertiary bg-border-bottom bg-border-body bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navigation</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="container-fluid">
                    <div class="navbar-nav">
                        <a class="nav-link" href="/">Home</a>
                        <a class="nav-link" href="/courses">View All Courses</a>
                        <a class="nav-link" href="/courses/search">Search Courses</a>
                        {% if logged_in %}
                        <a class="nav-link" href="{{url_for('get_matching_user', user_id=user_id)}}">Profile</a>
                        <a class="nav-link" href="/logout">Logout</a>
                        {% else %}
                        <a class="nav-link" href="/login">Login</a>
                        {% endif %}

                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>
<body>
    <div class="notifications">
        {% for category, message in get_flashed_messages(with_categories=true) %}
            <div id="flash-course-message" class="flash {{category}}">{{message}}</div>
        {% endfor %}
    </div>
    <h1>Currently Registered Users</h1>
    {% if user_list|length > 0 %}
    <div id="display-registered-users-table">
        <table id="all-registered-users-table">
            <thead>
                <tr>
                {% for key in user_list[0].keys() %}
                    {% if key == 'Email' or key == 'Name' or key == 'User ID' %}
                    <th>{{key}}</th>
                    {% endif %}
                {% endfor %}
                <th>Link</th>
                <th>Edit</th>
                <th>Delete</th>
                <tr>
            </thead>
            <tbody>
                {% for user in user_list %}
                <tr>
                    {% for key in user.keys() %}
                        {% if key == 'Email' or key == 'Name' or key == 'User ID' %}
                        <td>{{user[key]}}</td>
                        {% endif %}
                    {% endfor %}
                    <td><a type="button" class="btn btn-outline-secondary" href="{{url_for('get_matching_user', user_id=user['User ID'])}}">
                        View User
                        <img src="/static/img/view-user.svg" width="39" height="30">
                        </a>
                    </td>
                    <td>
                        <a type="button" class="btn btn-outline-primary" href="{{url_for('edit_user_account', user_id=user['User ID'])}}">
                        Edit Account
                        <img src="/static/img/delete-user.svg" width="39" height="30">
                        </a>
                    </td>
                    <td>
                        <a type="button" class="btn btn-outline-danger"href="{{url_for('remove_user_account', user_id=user['User ID'])}}">
                        Delete Account
                        <img src="/static/img/unenroll-user.svg" width="39" height="30">
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <!-- This should be unreachable but just in case... -->
    <h2>There are currently no users registered with this application!</h2>
    {% endif %}


    <script>
        window.addEventListener('load', () => {
            const flaskMessage = document.querySelector("#flash-course-message");
            if (flaskMessage) {
                setTimeout(() => {document.querySelector("#flash-course-message").remove();}, 6000)
            }
            // document.querySelector('#update-enrolled-student-table').display.style = "none";
        })

    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>